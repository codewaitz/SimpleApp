<resources>

    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.App.Launch">
        <item name="android:windowBackground">@drawable/shape_splash</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/shape_btn_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/shape_btn_white</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="Button.GreenBox">
        <item name="android:background">@drawable/shape_btn_green_box</item>
        <item name="android:textColor">@color/color_2D63B8</item>
    </style>

    <style name="LinearClick">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DatePickerStyle">
        <item name="wheelTextSize">@dimen/sp_18</item>
        <item name="wheelTextColor">@color/color_868686</item>
        <item name="wheelSelectedTextColor">@color/color_333333</item>
        <item name="wheelDividerColor">@color/transparent</item>
    </style>

    <style name="EditTextPhone">
        <item name="android:background">@null</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>