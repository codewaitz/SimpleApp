<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.lib.common.widget.wheel.WheelView
            android:id="@+id/wheel_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:wheelDividerColor="@color/white"
            app:wheelHighlightColor="@color/white"
            app:wheelItemCount="3"
            app:wheelSelectedTextColor="@color/color_333333"
            app:wheelSelectedTextSize="@dimen/sp_24"
            app:wheelTextColor="@color/color_868686"
            app:wheelTextSize="@dimen/sp_17" />

        <android.lib.common.widget.wheel.WheelView
            android:id="@+id/wheel_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:wheelDividerColor="@color/white"
            app:wheelHighlightColor="@color/white"
            app:wheelItemCount="3"
            app:wheelSelectedTextColor="@color/color_333333"
            app:wheelSelectedTextSize="@dimen/sp_24"
            app:wheelTextColor="@color/color_868686"
            app:wheelTextSize="@dimen/sp_17" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_select"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15" />
</LinearLayout>